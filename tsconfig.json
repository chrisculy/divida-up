{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"lib": ["es6", "dom"],
		"module": "es6",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"outDir": "./dist/",
		"rootDir": "src",
		"sourceMap": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es5"
	},
	"include": [
		"./src/**/*"
	]
}